
<div class="col-md-4" id="post_<%= post.id %>">

  <div class="panel panel-default">
    <div class="panel-heading text-center"><%= post.title %></div>
    <div class="panel-body text-center">
      <%= post.content %>
    </div>
    <div class="panel-footer">
      <div class="col-md-8">
        <%= time_tag(post.created_at) %>
      </div>
      <div class="text-right">
        <button type="button" class="btn btn-info"  data-toggle="modal"  data-target="#myupdatepost_<%= post.id %>">
          <span class="glyphicon glyphicon-pencil"></span>&nbsp;
        </button>
        <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger", remote: true %>
      </div>
    </div>
  </div>

<!-- Modal -->
<%= form_for(post, :method => :put, remote: true) do |f| %>
<div class="modal fade" id="myupdatepost_<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title text-center" id="myModalLabel">Edit</h2>
      </div>
      <div class="modal-body">

            <div class="field">
              <%= f.label :title %><br>
              <%= f.text_field :title, class: 'form-control post_title' %>
            </div>
            <div class="field">
              <%= f.label :content %><br>
              <%= f.text_area :content, class: 'form-control post_content'%>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="myupdatebutton_<%= post.id %>">Close</button>
          <%= submit_tag "Update", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
  <% end %>
</div>
